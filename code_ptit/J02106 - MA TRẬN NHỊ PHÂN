import java.util.*;

public class tryJava{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int cnt = 0;
        for(int i = 0; i < n; i++){
            int cntr = 0;
            for(int j = 0; j < 3; j++){
                int x = sc.nextInt();
                if(x > 0) cntr++;
            }
            if(cntr > 1) cnt ++;
        }
        System.out.print(cnt);
    }
}
